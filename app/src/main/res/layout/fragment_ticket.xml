<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TicketFragment">

    <TextView
        android:id="@+id/txt_order_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/order_ticket"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginVertical="16dp"
        android:src="@drawable/img_ticket"
        android:contentDescription="@string/ticket"
        />

    <Button
        android:id="@+id/btn_buy_ticket"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/buy_ticket"
        android:textSize="14sp"
        android:background="@drawable/custom_btn"
        app:backgroundTint="@color/primary"
        />

    <TextView
        android:id="@+id/txt_ordered_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/ordered_ticket"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_ordered_ticket_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/first_class_ticket"
        android:textSize="16sp"
        android:visibility="gone"/>

</LinearLayout>